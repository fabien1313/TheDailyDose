<main>
    {{#each posts}}
    <div class="post">
       <a class="anchor" href="/editpost/{{id}}"><h2 class="post-title">{{title}} <span class="postedby-date">Posted By: {{User.username}} {{format_date created_at}}</span></h2></a>
        <p class="content">{{content}}</p>
    </div>
    {{/each}}
</main>

<div id="create-btn-div">
    <a href="/newpost"><button id="create-btn">Create Blog Post</button></a>
</div>