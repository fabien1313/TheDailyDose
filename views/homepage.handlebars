<main>
    {{#each posts}}
    <div class="post">
        <a class="anchor" href="/post/{{id}}"><h2 class="post-title">{{title}}</a> <span class="postedby-date">Posted By: {{User.username}} {{format_date created_at}}</span></h2>
        <p class="content">{{content}}</p>
    </div>
    {{/each}}
</main>